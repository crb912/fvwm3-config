WindowTitle {DateTime}
WindowSize  85 24
Font "xft:Sans:style=Bold:size=10" 

Init
 Begin
  Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)
  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 360)==0 Then
  Begin
   Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)
   ChangeTitle 2 $Date
  End
End


Widget 2
Property
 Position 5 0
 Size 75 24
 Font "xft:Sans:style=Bold:size=8"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End
